<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.eftmarket.eftmarket.controllers.ItemDetailsController">
    <ImageView fx:id="itemLogo" fitHeight="150" fitWidth="150" />
    <Label fx:id="itemName" styleClass="item-name" />
    <Label fx:id="itemPrice" styleClass="item-price" />
    <Label fx:id="itemDescription" styleClass="item-description" wrapText="true" />
    <Button onAction="#onClose" styleClass="button" text="Close" />
</VBox>
